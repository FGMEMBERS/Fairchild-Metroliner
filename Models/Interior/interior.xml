<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>intparbrise</object-name>
    <object-name>inttour</object-name>
    <object-name>intporte</object-name>
    <object-name>intcargo</object-name>
    <object-name>planchet</object-name>
    <object-name>cloison</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Fairchild-Metroliner/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Fairchild-Metroliner/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -5.501 </x-m>
      <y-m> -0.464 </y-m>
      <z-m> -0.209 </z-m>
    </offsets>
  </model>
  
    <!-- Co-Pilote -->
  <model>
    <path>Aircraft/Fairchild-Metroliner/Models/Pilot/copilot.xml</path>
    <offsets>
      <x-m> -5.501 </x-m>
      <y-m>  0.464 </y-m>
      <z-m> -0.209 </z-m>
    </offsets>
  </model>

  <!-- Tout les siÃ¨ges -->
  <model>
    <path>Aircraft/Fairchild-Metroliner/Models/Interior/Seat/allseats.xml</path>
  </model>
  
  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Fairchild-Metroliner/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -6.196 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.127 </z-m>
    </offsets>
  </model>

  <!-- Porte avion -->
  <animation>
    <type>pick</type>
    <object-name>intporte</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>intporte</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 145 </factor>
    <center>
      <x-m> -4.513 </x-m>
      <y-m> -0.720 </y-m>
      <z-m> -1.276 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Porte cargo -->
  <animation>
    <type>pick</type>
    <object-name>intcargo</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>intcargo</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> -85 </factor>
    <center>
      <x-m>  3.438 </x-m>
      <y-m> -0.530 </y-m>
      <z-m>  0.530 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
